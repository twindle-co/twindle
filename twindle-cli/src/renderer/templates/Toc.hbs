    <div class="header">
      <img id="userImage" src="{{user.profile_image_url}}" alt="{{user.username}}" />
      <div>
        <h3>
          {{user.name}} {{#if user.verified}}
          <svg class="verified-badge" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64">
            <defs></defs>
            <path fill="#1da1f2"
