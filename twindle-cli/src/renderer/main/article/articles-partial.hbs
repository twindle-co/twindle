<body class="light sans-serif loaded" style="--font-size:14px;">
  {{#each this}}

  <div class="container" style="--line-height:1.6em;" dir="ltr">
    <div class="header reader-header">
      <a class="domain reader-domain" href='{{url}}'>{{urldomain}}</a>
      <div class="domain-border"></div>
      <h1 class="reader-title">{{title}}</h1>
      {{#if author}}
      <div class="credits reader-credits">{{author}}</div>
      {{/if}}
      {{#if image}}
      <div class="banner">
        <img src="{{image}}" style='width:100%' />
      </div>
      {{/if}}
      <div class="meta-data">
        <div class="reader-estimated-time"></div>
      </div>
    </div>
    <hr>

    <div class="content">
      <div class="moz-reader-content">
        {{{html}}}
      </div>
    </div>
  </div>
  <div style='page-break-after:always'></div>
  {{/each}}
</body>